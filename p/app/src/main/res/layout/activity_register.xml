<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.scit.test.squarizemobile.Register">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="15sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/idRegister"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="hello"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="15sp"
            android:gravity="center" />
        <EditText
            android:id="@+id/pwRegister"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="1234"
            android:password="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="15sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/pwConfirmRegister"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="1234"
            android:password="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="15sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/nameRegister"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="나나"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="15sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/mailRegister"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="kshmarine@gmail.com"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="선호장르"
            android:textSize="15sp"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/genreRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/okRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:onClick="registerBtn"/>
        <Button
            android:id="@+id/cancelRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:onClick="registerBtn"/>
    </LinearLayout>


</LinearLayout>
